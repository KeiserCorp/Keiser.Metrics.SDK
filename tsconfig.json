{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist/types",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "newLine": "lf",
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "mocha",
      "node"
    ],
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*",
    "./node_modules/@types"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "theme": "default",
    "name": "Keiser Metrics SDK API",
    "readme": "none",
    "exclude": [
      "src/lib/*",
      "src/models/cache.ts",
      "src/models/stats.ts",
      "src/models/task.ts",
      "src/models/facilityLicense.ts"
    ],
    "includeVersion": true,
    "includeDeclarations": false,
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true
  }
}