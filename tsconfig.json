{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": false,
    "sourceMap": true,
    "strict": true,
    "newLine": "lf",
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "mocha",
      "node"
    ],
    "lib": [
      "DOM",
      "WebWorker"
    ]
  },
  "include": [
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}