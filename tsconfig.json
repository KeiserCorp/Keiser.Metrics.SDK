{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "mocha",
      "node"
    ],
    "lib": [
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "theme": "default",
    "name": "Keiser Metrics SDK",
    "readme": "none",
    "exclude": [
      "src/lib/*",
      "src/models/cache.ts",
      "src/models/stat.ts",
      "src/models/task.ts",
      "src/models/facilityLicense.ts",
      "src/models/globalAccessControl.ts"
    ],
    "includeVersion": true,
    "includeDeclarations": false,
    "excludeExternals": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true
  }
}